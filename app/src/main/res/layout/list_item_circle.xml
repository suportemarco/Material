<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="4.0dp"
    android:layout_marginLeft="8.0dp"
    android:layout_marginRight="8.0dp"
    android:layout_marginTop="4.0dp"
    card_view:cardCornerRadius="2dp">

    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView xmlns:fresco="http://schemas.android.com/apk/res-auto"
            android:id="@+id/image1"
            android:layout_width="100.0dp"
            android:layout_height="100.0dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="8dp"
            fresco:placeholderImage="@color/purple"
            fresco:roundAsCircle="true" />

        <LinearLayout
            android:layout_marginLeft="4dp"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@+id/image1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/colaborador_nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Marco Combat"
            android:textColor="@color/blue"
            android:textSize="@dimen/colaborador_nome"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/colaborador_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="email"
            android:textSize="@dimen/colaborador_email"
            android:textColor="@color/stay_color"
            android:layout_alignBottom="@+id/image1"
            android:layout_centerHorizontal="true" />

        </LinearLayout>


    </RelativeLayout>

</android.support.v7.widget.CardView>